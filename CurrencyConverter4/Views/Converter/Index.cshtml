@{
    ViewBag.Title = "Index";
}
@using CurrencyConverter4.Models;
@model CurrencyConverter4.Models.Converter

<h2>Currency Converter</h2>

@using (Html.BeginForm("Convert", "Converter", FormMethod.Post))
{
<fieldset>
    From
    @Html.TextBoxFor(model => model.OriginalAmount)
	@Html.ValidationMessageFor(model => model.OriginalAmount)
	@Html.DropDownListFor(model => model.OriginalCurrencyName, new SelectList(Model.OriginalCurrency, "Text", "Value"))
	To
	@Html.DropDownListFor(model => model.TargetCurrencyName, new SelectList(Model.TargetCurrency, "Text", "Value"))
    <p><input type="submit" value="Convert" /></p>
</fieldset>
}

@TempData["ConversionResult"]